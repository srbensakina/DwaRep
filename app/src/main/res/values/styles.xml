<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MenuStyle" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:background" >@android:color/white</item>
    </style>
    <style name="BoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxCornerRadiusBottomEnd">15dp</item>
        <item name="boxCornerRadiusTopStart">15dp</item>
        <item name="boxCornerRadiusTopEnd">15dp</item>
        <item name="boxCornerRadiusBottomStart">15dp</item>

        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>
    <style name="searchButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerFamily">rounded</item>
        <item name="shapeAppearanceOverlay">@style/myshapeappearance</item>
    </style>
    <style name="myshapeappearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

</resources>
