<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradiantbackground"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/drawer_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/space_naviguation"/>

    <com.luseen.spacenavigation.SpaceNavigationView
        android:id="@+id/space_naviguation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        app:active_item_color="@color/colorAccent"
        app:centre_button_color="@color/centre_button_color"
        app:inactive_item_color="@color/black"
        app:inactive_centre_button_icon_color="@color/space_white"
        app:active_centre_button_icon_color="@color/space_white"
        app:active_centre_button_background_color="#F44336"
        app:space_background_color="@color/oceanwhite"
        app:centre_button_icon="@drawable/ic_home_black_24dp"
        app:space_item_icon_size="30dp"
        app:space_item_icon_only_size="@dimen/space_item_icon_only_size"
        app:space_item_text_size="@dimen/space_item_text_default_size" />
</RelativeLayout>